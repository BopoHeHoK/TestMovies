    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_6sdp"
    app:cardUseCompatPadding="true"
    android:elevation="@dimen/_10sdp"
    android:padding="@dimen/_2sdp"
